#!/bin/bash

# Read the heredoc line by line
while IFS= read -r line; do
    echo "$line"
    sleep 0.1  # Adjust delay as needed
done << 'EOF'
          __,='`````'=/__
        '//  (o) \(o) \ `'         _,-,
        //|     ,_)   (`\      ,-'`_,-\
      ,-~~~\  `'==='  /-,      \==```` \__
      /        `----'     `\     \       \/
  ,-`                  ,   \  ,.-\       \
  /      ,               \,-`\`_,-`\_,..--'\
,`    ,/,              ,>,   )     \--`````\
(      `\`---'`  `-,-'`_,<   \      \_,.--'`
  `.      `--. _,-'`_,-`  |    \
  [`-.___   <`_,-'`------(    /
  (`` _,-\   \ --`````````|--`
    >-`_,-`\,-` ,          |
  <`_,'     ,  /\          /
  `  \/\,-/ `/  \/`\_/V\_/
      (  ._. )    ( .__. )
      |      |    |      |
      \,---_|    |_---./
      ooOO(_)    (_)OOoo
EOF